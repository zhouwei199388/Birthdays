<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="16dp"
        android:background="#ff9598"
        >

        <TextView
            android:id="@+id/tv_custom_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/colorWrite"
            android:text="请选择宝宝生日"
            />

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_toLeftOf="@+id/iv_confirm"
            android:src="@drawable/ic_dialog_cancel"
            android:scaleType="centerInside"
            />

        <ImageView
            android:id="@+id/iv_confirm"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_dialog_confirm"
            android:scaleType="centerInside"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWrite"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/numberPicker_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:focusable="false"/>

        <NumberPicker
            android:id="@+id/numberPicker_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:focusable="false"/>

        <NumberPicker
            android:id="@+id/numberPicker_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:focusable="false"/>
    </LinearLayout>
</LinearLayout>